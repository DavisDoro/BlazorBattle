@page "/army"
@inject IUnitService UnitService

<h3>My Army</h3>
<table class="table">
    @foreach (var userUnits in UnitService.MyUnits)
    {
        <tr>
            <td>
                @switch (userUnits.UnitId)
                {
                    case 1:<img src="icons/knight.png" />break;
                    case 2: <img src="icons/archer.png" />break;
                    case 3: <img src="icons/mage.png" />break;
                }
            </td>
            <td>
                @UnitService.Units.First(unit => unit.Id == userUnits.UnitId).Title
            </td>
            <td>
                @userUnits.HitPoints HP
            </td>
        </tr>

    }



</table>
